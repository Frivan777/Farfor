<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:id="@+id/food_list_item_imageView"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp">

        <TextView
            android:id="@+id/food_list_item_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Здесь будет название" />

        <TextView
            android:id="@+id/food_list_item_weight_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Здесь будет вес" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Здесь будет цена"
            android:id="@+id/food_list_item_price_textView"/>

    </LinearLayout>

</LinearLayout>